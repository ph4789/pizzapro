{
  "name": "pizzapro",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "npx react-native run-android",
    "ios": "npx react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "errorType": "npm install --package-lock-only --ignore-scripts && npx npm-force-resolutions",
    "clear": "rm -rf $TMPDIR/react-native-packager-cache-* && rm -rf $TMPDIR/metro-bundler-cache-*",
    "resetPodsforIntel": "cd ios && pod deintegrate && pod cache clean --all && pod cache clean 'FortifySec' --all && pod install",
    "resetPodsforM1": "cd ios && pod deintegrate && pod cache clean --all && pod cache clean 'FortifySec' --all && arch -x86_64 pod install",
    "android:clean": "cd android && sudo ./gradlew clean && cd ..",
    "androidCopyJS": "npx react-native bundle --platform android --dev false --entry-file index.js  --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "apkDebug": "cd android && ./gradlew assembleDebug && cd ..",
    "apkRelease": "cd android && sudo ./gradlew assembleRelease && cd ..",
    "bundleRelease": "cd android && ./gradlew bundleRelease && cd ..",
    "forceInstall": "sudo npm install --unsafe-perm=true --allow-root --legacy-peer-deps",
    "generateApkDebug": "yarn android:clean && yarn androidCopyJS && yarn apkDebug",
    "generateApkProd": "yarn android:clean && yarn androidCopyJS && yarn apkRelease",
    "generateBundle": "yarn android:clean && yarn androidCopyJS && yarn bundleRelease"
  },
  "dependencies": {
    "@expo-google-fonts/dm-sans": "^0.3.0",
    "@expo-google-fonts/dm-serif-display": "^0.3.0",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-firebase/app": "^21.14.0",
    "@react-native-firebase/auth": "^21.14.0",
    "@react-native-firebase/firestore": "^21.14.0",
    "@react-native-firebase/storage": "^22.0.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/native-stack": "^7.3.10",
    "expo-app-loading": "^2.1.1",
    "expo-asset": "^11.0.5",
    "expo-font": "^13.0.4",
    "expo-image-picker": "^16.0.6",
    "expo-linear-gradient": "^14.0.2",
    "expo-modules-core": "^2.2.3",
    "expo-status-bar": "^2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.1",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-image-picker": "^8.2.0",
    "react-native-iphone-x-helper": "^1.3.1",
    "react-native-reanimated": "^3.17.5",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.10.0",
    "react-native-svg": "^15.11.2",
    "react-native-vector-icons": "^10.2.0",
    "rn-fetch-blob": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "^0.79.1",
    "@react-native/eslint-config": "0.79.1",
    "@react-native/metro-config": "0.79.1",
    "@react-native/typescript-config": "0.79.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
